
<h1>Your Polls </h1>

<br>
<div class="table_body">
  <table class="table table-striped table-bordered table-condensed">
    <thead>
      <tr>
        <th>Poll Name</th>
        <th>Start Date</th>
        <th>Closing Date</th>
        <th>Delete</th>
    </thead>
    <tbody>
				<% @polls.each do |poll| %>
				<tr>
				  <td><%= link_to poll.name, poll_path(poll) %></td>
				  <td><%= poll[:start_date] %></td>
				  <td><%= poll[:end_date] %></td>
				  <td><%= link_to "delete", delete_poll_path(poll), method: :delete, data: { confirm: "You sure?" } , :class => "btn btn-danger btn-xs" %></td>
				</tr>
				<% end %>

<%= link_to "Create New Poll", new_poll_path %>